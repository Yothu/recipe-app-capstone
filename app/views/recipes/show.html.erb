<div class="d-flex flex-column align-content-center my-3 p-3 border border-dark rounded border-2">
  <h2 class="align-self-center"><%= @recipe.name %></h2>
  <div class="">
    <div class="d-flex justify-content-between">
      <div class="my-2">
        <strong>Preparation time: </strong>
        <%= @recipe.preparation_time%>
      </div>
      <% if @recipe.user == @current_user%>
        Owner
        <!-- public button -->
      <% end %>
    </div>
    <div class="my-2">
      <strong>Cooking time: </strong>
      <%= @recipe.cooking_time%>
    </div>
    <div class="my-2">
      <%= @recipe.description%>
    </div>
    <div class="d-flex justify-content-between">
      Generate shopping list
      <!-- shopping list button -->
      <% if @recipe.user == @current_user%>
        <%= link_to 'Add Ingredient!', new_recipe_recipe_food_path(@recipe), class: 'border border-dark border-2 rounded p-2 text-dark text-decoration-none d-flex align-items-center' %>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="">
    <%= render 'recipe_food_table', recipe_foods: @recipe.recipe_foods, current_user: @current_user %>
  </div>
</div>
